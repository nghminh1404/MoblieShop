@page
@model MobileShop.Management.Hosted.Pages.AddDiscountModel

@{
    ViewData["Title"] = "Create discount";
}
<div id="preloder">
    <div class="loader"></div>
</div>
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <p style="color:Tomato;">@Model.message</p>
            <form method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Discount code<span>*</span></p>
                                    <input type="text" name="code">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="checkout__input">
                                    <p>Discount percent (%)<span>*</span></p>
                                    <input type="text" name="percent">
                                </div>
                            </div>
                            <div class="col-lg-9">
                                <div class="checkout__input">
                                    <p>Expiration date<span>*</span></p>
                                    <input type="date" name="expiration_date">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <button type="submit" class="site-btn" name="submit">ADD COUPON</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>