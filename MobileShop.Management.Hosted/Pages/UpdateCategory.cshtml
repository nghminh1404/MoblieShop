@page
@model MobileShop.Management.Hosted.Pages.UpdateCategoryModel
@{
    ViewData["Title"] = "Update category";
}
<div id="preloder">
    <div class="loader"></div>
</div>
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <p style="color:Tomato;">@Model.message</p>
            <form method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Discount code<span>*</span></p>
                                    <input type="hidden" name="idcategory" value="@Model.category.CategoryId">
                                    <input type="text" name="name" value="@Model.category.CategoryName">
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <button type="submit" class="site-btn" name="submit">UPDATE</button>
                            </div>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</section>