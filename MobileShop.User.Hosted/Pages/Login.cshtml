@page
@model MobileShop.User.Hosted.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div id="preloder">
    <div class="loader"></div>
</div>
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <form method="post">
                <div class="row">
                    <div class="col-lg-2 col-md-3">
                    </div>
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    @if (!string.IsNullOrEmpty(Model.message))
                                    {
                                        <p style="color:Tomato;">@Model.message</p>
                                    }
                                    <p>Mail<span>*</span></p>
                                    <input type="text" name="mail">
                                </div>
                                <div class="checkout__input">
                                    <p>Password<span>*</span></p>
                                    <input type="password" name="password">
                                </div>
                            </div>
                        </div>
                        <div class="checkout__order">
                            <button type="submit" class="site-btn" name="submit">SignIn</button>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3">
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-lg-2 col-md-3">
                </div>
                <div class="col-lg-8 col-md-6">
                    <div class="row">
                        <div class="col-lg-9">
                        </div>
                        <div class="col-lg-3">
                            <a href="/MailForgotPassword" style="color:DodgerBlue;">Forgot password?</a>
                            <a href="/RegisterAccount" style="color:DodgerBlue;">Create An Account</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3">
                </div>
            </div>
        </div>
    </div>
</section>
